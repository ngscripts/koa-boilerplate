{
  "name": "koa-boilerplate",
  "version": "0.0.0",
  "description": "A boilerplate for KOA Rest APIs with Sequelize",
  "main": "src/app.js",
  "author": "Anwaar Ulhaq (ulhaq.anwaar@gmail.com)",
  "license": "MIT",
  "engines": {
    "node": ">=8.9.4",
    "npm": ">=3.8"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/app.js",
    "build": "rimraf dist && babel src -d dist -s",
    "dev": "nodemon src/app.js",
    "test": "node test/index.js",
    "lint": "eslint --fix src && prettier --write \"src/**/*.js\"",
    "precommit": "lint-staged"
  },
  "keywords": [
    "mysql",
    "koa",
    "middleware",
    "es7",
    "validation",
    "jwt",
    "logger",
    "routers",
    "docker",
    "env",
    "sequelize",
    "ORM",
    "build",
    "dist"
  ],
  "dependencies": {
    "@koa/cors": "^2.2.2",
    "bristol": "^0.4.0",
    "http-status-codes": "^1.3.0",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-combine-routers": "^4.0.2",
    "koa-compress": "^3.0.0",
    "koa-respond": "^2.1.0",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.11",
    "mysql2": "^1.6.4",
    "palin": "^2.2.0",
    "sequelize": "^4.41.2",
    "yenv": "^2.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-source-map-support": "^2.0.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.1.4",
    "lint-staged": "^8.0.5",
    "nodemon": "^1.18.6",
    "prettier": "^1.15.2",
    "rimraf": "^2.6.2",
    "smid": "^0.1.1"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [],
    "extends": [
      "standard",
      "prettier"
    ],
    "env": {}
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "execMap": {
      "js": "babel-node"
    }
  },
  "babel": {
    "sourceMaps": "both",
    "plugins": [
      "transform-runtime",
      "transform-object-rest-spread"
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "env": {
      "production": {
        "plugins": [
          "source-map-support"
        ],
        "ignore": []
      }
    }
  }
}
